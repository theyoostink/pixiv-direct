{
	"manifest_version": 3,
	"name": "Pixiv Direct",
	"description": "This extension lets you click on links on pixiv and go directly to the link destination.",
	"version": "1.0.0",
	"host_permissions": ["https://*.pixiv.net/*"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"permissions": ["tabs"]
	},
	"content_scripts": [
		{
			"js": ["content.js"],
			"matches": ["https://*.pixiv.net/jump.php*"],
			"run_at": "document_end"
		}
	]
}